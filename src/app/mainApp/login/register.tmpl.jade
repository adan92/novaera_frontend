div(layout='row', flex='', layout-padding='', layout-fill='', layout-align='center center')
   div(flex='40', flex-lg='50', flex-md='70', flex-sm='100')
      md-card
         md-toolbar
            .padding-20.text-center
               div
                  img(ng-src='{{::vm.triSettings.logo}}', alt='{{vm.triSettings.name}}')
               h1.md-headline(translate='') LOGIN.SIGNUP_LINK
         md-content.md-padding
            form(name='register')
               md-input-container
                  label(for='username', translate='') LOGIN.USERNAME.LABEL
                  input#username(label='username', name='username', type='username', ng-model='vm.user.username', required)
                  div(ng-messages='register.username.$error', ng-if='register.username.$dirty')
                     div(ng-message='', when='required')
                        span(translate='') LOGIN.USERNAME.PLEASE_ENTER
               md-input-container
                  label(for='password', translate='') LOGIN.PASSWORD.LABEL
                  input#password(label='password', name='password', type='password', ng-model='vm.user.password', required)
                  div(ng-messages='', for='register.password.$error', ng-if='register.password.$dirty')
                     div(ng-message='', when='required')
                        span(translate='') LOGIN.PASSWORD.PLEASE_ENTER
               md-button.md-raised.md-primary.full-width.margin-left-0.margin-right-0.margin-top-10.margin-bottom-10(ng-click='vm.signup()', ng-disabled='register.$invalid', translate='LOGIN.SIGNUP_LINK', aria-label="{{'LOGIN.BUTTON' | translate}}")
               md-button.md-primary.full-width.margin-left-0.margin-right-0.margin-top-10.margin-bottom-10(ui-sref='auth.login', translate='LOGIN.RETURN', aria-label="{{'LOGIN.RETURN' | translate}}")
