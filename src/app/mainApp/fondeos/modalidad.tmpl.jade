.full-image-background.mb-bg-fb-03.overlay-40(layout='column', layout-align='center center')

    div(layout='column')
        md-toolbar.md-primary
            div.md-toolbar-tools(flex layout='column')
                h2(translate='') FONDEOS.MODALITY.CHOOSE
        div.wizard(flex layout='row')
            md-button.md-fab(ng-click='vm.getModalidad()', ng-class='editar', aria-label='fab button')
                md-icon(md-font-icon='fa fa-pencil')

            md-button.md-fab.md-warn.md-raised(ng-click='vm.cancel()', ng-class='cancelar', aria-label='fab button', ng-show='vm.Modalidad.id!=null')
                md-icon(md-font-icon='zmdi zmdi-close-circle-o')

            md-input-container
                label(translate) FONDEOS.MODALITY.CHOOSE
                md-select(ng-model='vm.selectedModalidad', name='select', ng-show='vm.Modalidades!= null')
                    md-option(ng-repeat='modal in vm.Modalidades', ng-value='modal') {{modal.Nombre}}



    div(layout='row', layout-align='center center')
        p.md-headline.font-weight-300.text-center.text-light(flex='70', flex-sm='90', translate='') FONDEOS.MODALITY.INTRO



     div(flex='', layout='row', layout-align='center center', layout-fill='')
        .md-whiteframe-z1.margin-bottom-100(flex='80', layout='column', tri-wizard='')
            md-toolbar.md-primary
                .md-toolbar-tools(flex='', layout='row', layout-align='space-between center')
                    h2(translate='') FONDEOS.MODALITY.TITLE
                    h2
                        | {{triWizard.progress}}%
                        span(translate='') FONDEOS.WIZARD.COMPLETED
                md-progress-linear.md-accent.padding-bottom-10(md-mode='determinate', ng-value='triWizard.progress')
            md-tabs.md-primary(layout-fill='', md-selected='triWizard.currentStep', md-dynamic-height='', md-stretch-tabs='always')
                md-tab#info
                    md-tab-label
                        span.oxy-step-label 1
                        span(translate='') FONDEOS.CALL.GENERAL
                    md-tab-body
                        .wizard.layout-padding
                            form(name='projectInfo', tri-wizard-form='', novalidate='')
                                div(layout='column', flex='')
                                    md-input-container
                                        label(translate='') FONDEOS.MODALITY.NAME_MODALITY
                                        input(name='name', required='', type='text', ng-model='vm.Modalidad.Nombre')
                                        div(ng-messages='projectInfo.titulo.$error')
                                            div(ng-message='', when='required')
                                                span(translate='') FONDEOS.WIZARD.REQUIRED-FIELD
                                    md-input-container
                                        label(translate='') FONDEOS.MODALITY.FONDEOS
                                        md-select(ng-model='vm.selectedFondeo', required='', name='fondo')
                                            md-option(ng-repeat='fondeo in vm.Fondeos', ng-value='fondeo')
                                                | {{fondeo.Titulo}}
                                    div(ng-messages='projectInfo.descripcion.$error')
                                        div(ng-message='', when='required')
                                            span(translate='') FONDEOS.WIZARD.REQUIRED-FIELD
                                    md-input-container
                                        label(translate='') FONDEOS.MODALITY.AMOUNT
                                        input(name='monto_modalidad', required='', ng-model='vm.Modalidad.Montos',type="number", min='0', max='10000000000')
                                        div(ng-messages='projectInfo.descripcion.$error')
                                            div(ng-message='', when='required')
                                                span(translate='') FONDEOS.WIZARD.REQUIRED-FIELD
                                    md-input-container
                                        label(translate='') FONDEOS.MODALITY.SUPPORT
                                        textarea(name='monto_modalidad', required='', ng-model='vm.Modalidad.FigurasApoyo', md-maxlength='500')
                                        div(ng-messages='projectInfo.descripcion.$error')
                                             div(ng-message='', when='required')
                                                span(translate='') FONDEOS.WIZARD.REQUIRED-FIELD


                md-tab#aims(ng-disabled='projectInfo.$invalid')
                    md-tab-label
                        span.oxy-step-label 2
                        span(translate='') FONDEOS.MODALITY.EVALUATION
                    md-tab-body
                        .wizard.layout-padding
                            form(name='modalityEvaluation', tri-wizard-form='')
                                md-input-container
                                    div(text-angular='', required='', ng-model='vm.Modalidad.CriteriosEvaluacion', ta-toolbar="[['bold','italics','ul','ol']]")
                                    label(translate='') FONDEOS.FEATURES.CLICK_TO_WRITE
                                    md-divider
                md-tab#reach(ng-disabled='projectInfo.$invalid')
                    md-tab-label
                        span.oxy-step-label 3
                        span(translate='') FONDEOS.MODALITY.FILES
                    md-tab-body
                        .wizard.layout-padding
                            form(name='modalityFiles', tri-wizard-form='')
                                md-input-container
                                    div(text-angular='', required='', ng-model='vm.Modalidad.Entregables', ta-toolbar="[['bold','italics','ul','ol']]")
                                    label(translate='') FONDEOS.FEATURES.CLICK_TO_WRITE
                                    md-divider
            .wizard-navbar(layout-fill='', layout-padding='', layout='row', layout-align='end center')
                md-button.md-primary.md-raised(ng-click='triWizard.prevStep()', ng-hide='triWizard.currentStep > 2', ng-disabled='triWizard.prevStepDisabled()', translate='FONDEOS.WIZARD.PREV')
                md-button.md-primary.md-raised(ng-click='triWizard.nextStep()', ng-hide='triWizard.progress == 100 && triWizard.currentStep >= 2', ng-disabled='triWizard.nextStepDisabled()', translate='FONDEOS.WIZARD.NEXT')
                md-button.md-accent.md-raised(ng-click='vm.registrarModalidad()', ng-show='triWizard.progress == 100 && triWizard.currentStep >= 2 ', translate='FONDEOS.WIZARD.SEND')
                md-button.md-warn.md-raised(ng-click='vm.eliminarModalidad()', ng-show='vm.Modalidad.id!=null', translate='FONDEOS.WIZARD.DELETE')
                md-button.md-primary.md-raised(ng-click='vm.cancel()', ng-show='vm.Modalidad.id!=null', translate='FONDEOS.WIZARD.STOP_EDIT')