.full-image-background.mb-bg-fb-03.overlay-40(layout='column', layout-align='center center')
    div(layout='row', layout-align='center center')
        p.md-headline.font-weight-300.text-center.text-light(flex='70', flex-sm='90', translate='') FONDEOS.MODALITY.INTRO
    div(flex='', layout='row', layout-align='center center', layout-fill='')
        .md-whiteframe-z1.margin-bottom-100(flex='80', layout='column', tri-wizard='')
            md-toolbar.md-primary
                .md-toolbar-tools(flex='', layout='row', layout-align='space-between center')
                    h2(translate='') FONDEOS.MODALITY.TITLE
                    h2
                        | {{triWizard.progress}}%
                        span(translate='') FONDEOS.WIZARD.COMPLETED
                md-progress-linear.md-accent.padding-bottom-10(md-mode='determinate', ng-value='triWizard.progress')
            md-tabs.md-primary(layout-fill='', md-selected='triWizard.currentStep', md-dynamic-height='', md-stretch-tabs='always')
                md-tab#info
                    md-tab-label
                        span.oxy-step-label 1
                        span(translate='') FONDEOS.CALL.GENERAL
                    md-tab-body
                        .wizard.layout-padding
                            form(name='projectInfo', tri-wizard-form='', novalidate='')
                                div(layout='column', flex='')
                                    md-input-container
                                        label(translate='') FONDEOS.MODALITY.NAME_MODALITY
                                        input(name='name', required='', type='text', ng-model='fondeo.nameModality')
                                        div(ng-messages='projectInfo.titulo.$error')
                                            div(ng-message='', when='required')
                                                span(translate='') FONDEOS.WIZARD.REQUIRED-FIELD
                                    md-input-container
                                        label(translate='') FONDEOS.MODALITY.FONDEOS
                                        md-select(ng-model='fondeo', required='', name='fondeo')
                                            md-option(ng-repeat='fondeo in vm.programasfondeo', value='{{fondeo.id}}')
                                                | {{fondeo.title}}
                                    div(ng-messages='projectInfo.descripcion.$error')
                                        div(ng-message='', when='required')
                                            span(translate='') FONDEOS.WIZARD.REQUIRED-FIELD
                                    md-input-container
                                        label(translate='') FONDEOS.MODALITY.AMOUNT
                                        textarea(name='monto_modalidad', required='', ng-model='fondeo.descripcion', md-maxlength='500')
                                        div(ng-messages='projectInfo.descripcion.$error')
                                            div(ng-message='', when='required')
                                                span(translate='') FONDEOS.WIZARD.REQUIRED-FIELD
                                    md-input-container
                                        label(translate='') FONDEOS.MODALITY.SUPPORT
                                        md-select(ng-model='call', required='')
                                            //
                                              <md-option ng-repeat="call in catalogoCalls | matcher: vm.selectedItem.call_id" value="{{call}}">
                                              {{call.nombre_call}}
                                              </md-option>
                                            md-option(ng-repeat='rubro in rubros', value='{{rubro.abbrev}}')
                                                | {{rubro.abbrev}}
                                        div(ng-messages='projectInfo.descripcion.$error')
                                            div(ng-message='', when='required')
                                                span(translate='') FONDEOS.WIZARD.REQUIRED-FIELD
                md-tab#fondeoT(ng-disabled='projectInfo.$invalid')
                    md-tab-label
                        span.oxy-step-label 2
                        span(translate='') FONDEOS.MODALITY.REQUERIMENTS
                    md-tab-body
                        .wizard.layout-padding
                            form(name='modality_requeriment', tri-wizard-form='')
                                div(flex='', layout='column', layout-wrap='')
                                    md-input-container
                                        div(text-angular='', required='', ng-model='modality_requeriment', ta-toolbar="[['bold','italics','ul','ol']]")
                                        label(translate='') FONDEOS.FEATURES.CLICK_TO_WRITE
                                        md-divider
                md-tab#aims(ng-disabled='projectInfo.$invalid')
                    md-tab-label
                        span.oxy-step-label 3
                        span(translate='') FONDEOS.MODALITY.EVALUATION
                    md-tab-body
                        .wizard.layout-padding
                            form(name='modalityEvaluation', tri-wizard-form='')
                                md-input-container
                                    div(text-angular='', required='', ng-model='modality.evaluation', ta-toolbar="[['bold','italics','ul','ol']]")
                                    label(translate='') FONDEOS.FEATURES.CLICK_TO_WRITE
                                    md-divider
                md-tab#reach(ng-disabled='projectInfo.$invalid')
                    md-tab-label
                        span.oxy-step-label 4
                        span(translate='') FONDEOS.MODALITY.FILES
                    md-tab-body
                        .wizard.layout-padding
                            form(name='modalityFiles', tri-wizard-form='')
                                md-input-container
                                    div(text-angular='', required='', ng-model='modality.files', ta-toolbar="[['bold','italics','ul','ol']]")
                                    label(translate='') FONDEOS.FEATURES.CLICK_TO_WRITE
                                    md-divider
            .wizard-navbar(layout-fill='', layout-padding='', layout='row', layout-align='end center')
                md-button.md-primary.md-raised(ng-click='triWizard.prevStep()', ng-hide='triWizard.currentStep > 3', ng-disabled='triWizard.prevStepDisabled()', translate='FONDEOS.WIZARD.PREV')
                md-button.md-primary.md-raised(ng-click='triWizard.nextStep()', ng-hide='triWizard.progress == 100 && triWizard.currentStep >= 3', ng-disabled='triWizard.nextStepDisabled()', translate='FONDEOS.WIZARD.NEXT')
                md-button.md-accent.md-raised(ng-click='triWizard.currentStep = 3', ng-show='triWizard.progress == 100 && triWizard.currentStep >= 3 ', translate='FONDEOS.WIZARD.SEND')
