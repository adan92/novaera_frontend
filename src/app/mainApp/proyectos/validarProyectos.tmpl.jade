div.dashboard-container.overlay-10.padded-content-page.layout.layout-column.ng-scope
    div(flex='', layout='row', layout-md='column')
        md-card(flex='')
            md-card-content
                h3.text-center(translate='') PROJECT.VALIDA.SELECTPROGRAM
                md-autocomplete.margin-bottom-20(ng-disabled='vm.isDisabled', md-no-cache='vm.noCache', md-selected-item='vm.selectedItem', md-search-text-change='vm.searchTextChange(vm.searchText)', md-search-text='vm.searchText', md-selected-item-change='vm.selectedItemChange(item)', md-items='item in vm.querySearch(vm.searchText)', md-item-text='item.titulo', md-min-length='0', placeholder='Selecciona el Programa de Fondeo a revisar')
                    span(md-highlight-text='vm.searchText', md-highlight-flags='^i')
                        | {{item.titulo}}, Publico Objetivo: {{item.publicoObjetivo}}, Fondo Total:{{item.fondototal}}
    div(flex layout='row', layout-sm='column', layout-md='column', ng-show='vm.selectedItem!=null')
        md-card(flex='', layout='column')
            md-card-content
                h2.text-center(translate='')
                    project.INSCRIPTION.INFOPROGRAM
                h3 Titulo: {{vm.selectedItem.titulo}}
                h4 Publico Objetivo: {{vm.selectedItem.publicoObjetivo}}
                h4 Fondo Total: {{vm.selectedItem.fondototal}}
                h4 Criterios de Elegibilidad: {{vm.selectedItem.criterios}}
    div(flex layout='row', layout-sm='column', layout-md='column', ng-show='vm.selectedItem!=null')
        md-card(flex)
            md-card-content
                // Cabecera de la md table
                md-table-container
                    table(md-table='', md-row-select='', ng-model='vm.selectedSolicitudes')
                        thead(md-head='', md-order='vm.query.order')
                            tr(md-row='md-row')
                                th(md-column='md-column', md-order-by='proyecto')
                                    span Proyecto
                                th(md-column='md-column', md-order-by='convocatoria')
                                    span Convocatoria
                                th(md-column='md-column', md-order-by='modalidad')
                                    span Modalidad
                                th(md-column='md-column', md-order-by='tecnopark')
                                    span Parque Tecnologico
                                th(md-column='md-column', md-order-by='fechaRegistro')
                                    span Fecha de Registro

                        // Cuerpo de la tabla
                        tbody(md-body='md-body')
                            tr(md-row='md-row', md-select='solicitud', md-select-id='{{solicitud.id}}', md-auto-select='md-auto-select', md-on-select='vm.validando', ng-repeat='solicitud in vm.solicitudes | orderBy:vm.query.order')
                                td(md-cell='md-cell') {{solicitud.proyecto}}
                                td(md-cell='md-cell') {{solicitud.convocatoria}}
                                td(md-cell='md-cell') {{solicitud.modalidad}}
                                td(md-cell='md-cell') {{solicitud.tecnopark}}
                                td(md-cell='md-cell') {{solicitud.fechaRegistro}}
    div(flex)
        div(flex)
            md-card(flex='', ng-show='vm.showValidate')
                div(layout='column')
                    div(layout='row', layout-align='center center', layout-sm='column')
                        md-card-content
                            h2(translate='') PROJECT.INSCRIPTION.FIELDS
                            form(name='agregarSolicitud', novalidate='')
                                md-input-container
                                    label(translate='') PROJECT.INSCRIPTION.STATUS
                                    md-select(ng-model='estados', required='', name='estados')
                                        md-option(ng-repeat='status in vm.estados', value='{{status.value}}')
                                            | {{status.value}}
                                md-input-container
                                    label(translate='') PROJECT.INSCRIPTION.MOUNTBRING
                                    input(ng-model='montoApoyado', required='', name='montoApoyado')
                                md-button.md-raised(ng-disabled='registrarSolicitud.$invalid', ng-click='validarSolicitud()', ng-class="['md-primary','md-hue-2']", aria-label='warn button')
                                    span(translate='') PROJECT.INSCRIPTION.VALIDATE
    // TARJETA PARA Mostrar la ultima columna editada
    div(layout='row', layout-sm='column', layout-md='column', ng-show='vm.showRow')
        md-card(flex='', layout='column')
            md-card-content
                h3.text-center(translate='') PROJECT.VALIDA.LASTEDITION
                md-list
                    .md-list-item-text
                        h3 Id:
                        h4 {{vm.solicitudEncontrada.id}}
                        h3 Proyecto:
                        h4 {{vm.solicitudEncontrada.proyecto}}
                        h3 Fondo:
                        h4 {{vm.solicitudEncontrada.fondo}}
                        h3 Convocatoria:
                        h4 {{vm.solicitudEncontrada.convocatoria}}
                        h3 Modalidad:
                        h4 {{vm.solicitudEncontrada.modalidad}}
                        h3 Parque Tecnologico:
                        h4 {{vm.solicitudEncontrada.tecnopark}}
                        h3 Monto Solicitado:
                        h4 {{vm.solicitudEncontrada.montosolicitado}}
                        h3 Monto Apoyado:
                        h4 {{vm.solicitudEncontrada.montoApoyado}}
                        h3 TRL Inicial:
                        h4 {{vm.solicitudEncontrada.trlInicial}}
                        h3 TRL Final:
                        h4 {{vm.solicitudEncontrada.trlFinal}}
                        h3 Fecha Registro:
                        h4 {{vm.solicitudEncontrada.fechaRegistro}}
                        h3 Fecha Cierre:
                        h4 {{vm.solicitudEncontrada.fechaCierre}}
                        h3 Resultado:
                        h4 {{vm.solicitudEncontrada.resultado}}
                        h3 Estado de la Solicitud:
                        h4 {{vm.solicitudEncontrada.validado}}

